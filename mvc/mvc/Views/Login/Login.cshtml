@model mvc.Models.User
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<style>
body {
  background-image: url('../../img/sce.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 50%;
}
</style>
<body >

    <form action="sumbit" method="post">

        <div style="width:800px; margin:0 auto;">

            <label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" value="@Model.username">@Html.ValidationMessageFor(x => x.username)
            <br />
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" value="@Model.password">@Html.ValidationMessageFor(x => x.password)
            <br />

            <br />
            <button type="submit">Login</button>
            <br />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })


        </div>


    </form>








</body>
